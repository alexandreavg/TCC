<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaCriaGrupo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:text="@string/criarGrupo"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/nomeGrupo"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nomeGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <requestFocus/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/nomeMateria"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nomeMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/statusGrupo"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="265dp"
        android:layout_height="77dp">

        <RadioButton
            android:id="@+id/rbtnStatusPrivadoGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statusPrivadoGrupo" />

        <RadioButton
            android:id="@+id/rbtnStatusPublicoGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statusPublicoGrupo" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/integrantes"
        android:textSize="15sp" />

    <NumberPicker
        android:id="@+id/numberPickerIntegrante"
        android:layout_width="wrap_content"
        android:layout_height="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/addFotoGrupo"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/salvarGrupo" />

</LinearLayout>